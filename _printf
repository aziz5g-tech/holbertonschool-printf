#include "main.h"
#include <stdarg.h>
#include <unistd.h>

int _printf(const char *format, ...)
{
    va_list args;
    int count = 0;
    char *str;

    if (!format)
        return (-1);

    va_start(args, format);

    while (*format)
    {
        if (*format == '%')
        {
            format++;
            if (*format == 'c')
                count += write(1, &(char){va_arg(args, int)}, 1);
            else if (*format == 's')
            {
                str = va_arg(args, char *);
                if (!str)
                    str = "(null)";
                while (*str)
                    count += write(1, str++, 1);
            }
            else if (*format == '%')
                count += write(1, "%", 1);
            else
            {
                count += write(1, "%", 1);
                if (*format)
                    count += write(1, format, 1);
            }
        }
        else
            count += write(1, format, 1);

        format++;
    }

    va_end(args);
    return count;
}
